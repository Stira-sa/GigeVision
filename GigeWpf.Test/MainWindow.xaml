<Window
    x:Class="GigeWpf.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GigeVisionLibrary.Test.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock Text="IP" />
            <TextBox MinWidth="100" Text="{Binding Camera.IP}" />
            <Button
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Button_Click"
                Content="Start Stream" />
            <TextBlock Text="{Binding Camera.Width}" />
            <CheckBox IsChecked="{Binding Camera.IsRawFrame}" ToolTip="Is Raw Frame" />
        </StackPanel>

        <Grid>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">

                <local:LightImage2 x:Name="lightControl" />
            </StackPanel>
            <TextBlock
                x:Name="Fps"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" />
        </Grid>
    </DockPanel>
</Window>